<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parkingmap.MapLayerTestActivity">

    <include layout="@layout/map_view" />

    <Button
        android:id="@+id/navigate_page_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:text="退出导航" />

    <FrameLayout
        android:id="@+id/navigate_page_framelayout"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/colorBlack">


        <ImageView
            android:id="@+id/navigate_page_direction"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/navigate_page_guide_text"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="XX米 进入"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/navigate_page_road_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无名道路"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

    </FrameLayout>


</RelativeLayout>
